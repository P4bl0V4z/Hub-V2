// tsconfig.build.json
{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist", 
    "declaration": true,
    "sourceMap": true,
    "deleteDirOnBuild": false,
    "deleteOutDir": false

  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist", "**/*spec.ts"]
}
